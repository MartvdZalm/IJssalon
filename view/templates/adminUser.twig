<div class="content">
    <h1>{{ user.Username }}</h1>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>ZipCode</th>
                    <th>City</th>
                    <th>PhoneNumber</th>
                    <th>Role</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.Username }}</td>
                    <td>{{ user.Email }}</td>
                    <td>{{ user.Address }}</td>
                    <td>{{ user.ZipCode }}</td>
                    <td>{{ user.City }}</td>
                    <td>{{ user.PhoneNumber }}</td>
                    <td>{{ user.IsAdmin == 0 ? 'Customer' : 'Admin' }}</td>
                    <td>{{ user.Created }}</td>
                    <td><button class="user-delete">Delete</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

