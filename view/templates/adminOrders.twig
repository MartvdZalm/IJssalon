<div class="content">
    <h1>Orders</h1>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>City</th>
                    <th>Type</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr data-href="http://localhost/IJssalon/50249/admin/orders/{{ order.id}}">
                    <td>{{ order.id }} </td>
                    <td>{{ order.Name }}</td>
                    <td>{{ order.City }}</td>
                    <td>{{ order.Type }}</td>
                    <td>{{ order.Created }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>