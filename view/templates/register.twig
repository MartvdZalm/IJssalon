<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <base href="http://localhost/IJssalon/">
        {% for style in styles %}
        <link rel="stylesheet" href={{ style }}>
        {% endfor %}
        <title>Register</title>
    </head>
    <body>
        <div class="register-container">
            <form method="post">
                <h1>Register</h1>

                {% if errors.extraError is defined %}
                    <p class="error">{{ errors.extraError }}</p>
                {% endif %}
                <div class="form-group">
                    <input type="text" id="username" name="username" placeholder="Username" required>
                    {% if errors.username is defined %}
                        <p class="error">{{ errors.username }}</p>
                    {% endif %}
                </div>

                <div class="form-group">
                    <input type="email" id="email" name="email" placeholder="Email" required>
                    {% if errors.email is defined %}
                        <p class="error">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <div class="form-group">
                    <input type="password" id="password" name="password" placeholder="Password" required>
                    {% if errors.password is defined %}
                        <p class="error">{{ errors.password }}</p>
                    {% endif %}
                </div>

                <div class="form-group">
                    <input type="password" id="confirm_password" name="confirmPassword" placeholder="Confirm Password" required>
                    {% if errors.confirmPassword is defined %}
                        <p class="error">{{ errors.confirmPassword }}</p>
                    {% endif %}
                </div>
            
                <button type="submit" name="register">Sign Up</button>
                <a class="form-link" href={{ signInLink }}>Already have an account</a>
            </form>
        </div>
    </body>
</html>
