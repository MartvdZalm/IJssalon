<main class="account">
    <h2>{{ user.Username }}</h2>
    <div>
        <form method="post">
            <div class="account-form">

                <label for="name">Name: </label> 
                <input type="text" name="name" id="name" value="{{ user.Username }}" placeholder="Name" required> 

                <label for="email">Email: </label> 
                <input type="email" name="email" id="email" value="{{ user.Email }}" placeholder="Email" required> 
                
                <label for="address">Address: </label>
                <input type="text" name="address" id="address" value="{{ user.Address }}" placeholder="Address"> 

                <label for="zipcode">ZipCode: </label>
                <input type="text" name="zipcode" id="zipcode" value="{{ user.ZipCode }}" placeholder="ZipCode">

                <label for="city">City: </label>
                <input type="text" name="city" id="city" value="{{ user.City }}" placeholder="City"> 

                <label for="phonenumber">Phone number: </label>
                <input type="text" name="phonenumber" id="phonenumber" value="{{ user.PhoneNumber }}" placeholder="Phone number"> 

                <label for="password">Password: </label>
                <input type="password" name="password" id="password" placeholder="Password" required> 
            </div>
            
            <div class="account-buttons">
                <input type="submit" name="change" value="Change">
                <input type="submit" name="deleteAccount" id="delete-account-btn" value="Delete account">
            </div>
        </form>
    </div>
    <div>
        <table>
            <thead>
                <tr>
                    <th>Address</th>
                    <th>City</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                <tr data-href="http://localhost/IJssalon/account/order/{{ order.id }}">
                    <td>{{ order.Address }}</td>
                    <td>{{ order.City }}</td>
                    <td>{{ order.Type }}</td>
                    <td>{{ order.Date }}</td>
                    <td>{{ order.Status }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</main>