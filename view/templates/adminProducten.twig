<div class="content">
    <div class="product-add">
        <h1>Producten</h1>
        <a href="http://localhost/IJssalon/50249/admin/producten/add" class="add-button">+</a>
    </div>
    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Flavour of the day</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                {% for product in producten %}
                <tr data-href="http://localhost/IJssalon/50249/admin/producten/{{ product.id }}">
                    <td>{{ product.id }}</td>
                    <td><img src="view/image/{{ product.Image }}"></td>
                    <td>{{ product.Name }}</td>   
                    <td>{{ product.FlavourOfTheday == 0 ? 'Disabled' : 'Enabled' }}</td> 
                    <td>{{ product.Quantity }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
